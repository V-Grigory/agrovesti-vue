<div id="template_3" class="template_3">
	<div class="contentWrapper">

		<div class="title"><%= data.title %></div>

		<div class="description"><%= data.description %></div>

		<div class="tabs">
			<% data.tabs.forEach((tab, index) => { %>
				<div id="<%= index %>" class="tab <% if(index === 0) { %>activeTab<% } %>">
					<%= tab.title %>
				</div>
			<% }); %>
		</div>

		<div class="tabsContent">
			<% data.tabs.forEach((tab, index) => { %>

				<div id="tabContent_<%= index %>" class="tabContent <% if(index > 0) { %>hiddenTabContent<% } %>">

					<div class="wrapTtemsTabContent">
						<% tab.content.forEach(tabContent => { %>
							<%- include('../partials/itemTabContentInTemplate_3', { tabContent: tabContent }); %>
						<% }); %>
						<div class="itemTabContent"></div>
						<div class="itemTabContent"></div>
					</div>

					<%- include('../partials/button', {
					classButton: 'whiteButton withBorder', text: tab.button.text, link: tab.button.url
					}); %>

				</div>
			<% }); %>
		</div>

	</div>
</div>
